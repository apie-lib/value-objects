{
    "name": "apie/value-objects",
    "description": "Apie value objects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pieter Jordaan",
            "email": "pieter_jordaan@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
